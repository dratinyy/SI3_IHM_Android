<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/produit_grid_element_background"
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/produit_grid_element_image"
                android:background="#000000"
                android:padding="1dp"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:contentDescription="@string/produit" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:background="#00000000">

                <ImageView
                    android:id="@+id/produit_grid_element_type"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/type_de_produit"/>

                <TextView
                    android:id="@+id/produit_grid_element_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>